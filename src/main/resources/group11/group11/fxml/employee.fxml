<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" styleClass="root" stylesheets="@../css/manager_2_style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group11.group11.Controller.EmployeeController">

    <!-- Sol Kısım-->
    <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="20">
        <Button styleClass="title-label" stylesheets="@../css/manager_2_style.css" text="EMPLOYEES" />
    </VBox>

    <!-- Üst Kısım: İşlem Butonları -->
    <HBox layoutX="250" layoutY="20" spacing="10">
        <Button fx:id="addEmployeeButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Add Employee" />
        <Button fx:id="deleteEmployeeButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Delete Employee" />
        <Button fx:id="updateEmployeeButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Update Employee" />
    </HBox>

    <!-- TextField'ler -->
    <HBox alignment="CENTER" layoutX="250" layoutY="70" spacing="10">
        <TextField fx:id="idField" prefHeight="29.0" prefWidth="53.0" promptText="ID" />
        <TextField fx:id="firstNameField" prefHeight="29.0" prefWidth="133.0" promptText="First Name" />
        <TextField fx:id="lastNameField" prefHeight="29.0" prefWidth="145.0" promptText="Last Name" />
        <TextField fx:id="passwordField" prefHeight="29.0" prefWidth="138.0" promptText="Password" />
        <TextField fx:id="roleField" prefWidth="150" promptText="Role" />
    </HBox>

    <!-- TableView: Çalışan Listesi -->
    <TableView fx:id="employeeTable" layoutX="250" layoutY="120" prefHeight="400" prefWidth="700" stylesheets="@../css/manager_2_style.css">
        <columns>
            <TableColumn fx:id="idColumn" prefWidth="50" text="ID" />
            <TableColumn fx:id="firstNameColumn" prefWidth="150" text="First Name" />
            <TableColumn fx:id="lastNameColumn" prefWidth="150" text="Last Name" />
            <TableColumn fx:id="passwordColumn" prefWidth="150" text="Password" />
            <TableColumn fx:id="roleColumn" prefWidth="150" text="Role" />
        </columns>
    </TableView>


    <!-- Menü Butonu -->
    <Button fx:id="menuButton" layoutX="20" layoutY="500" prefHeight="40" prefWidth="100" styleClass="menu-button" stylesheets="@../css/manager_2_style.css" text="MENU" />
</AnchorPane>
