<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" stylesheets="@../css/manager_2_style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.javafx1.CinemaPriceController">

    <!-- Sol Kısım: Menü Butonu ve Başlık -->
    <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="20">
        <Label styleClass="title-label" stylesheets="@../css/manager_2_style.css" text="Cinema Price" />
    </VBox>

    <!-- Üst Kısım: İşlem Butonu ve TextField'ler -->
    <HBox layoutX="250" layoutY="20" spacing="10">
        <TextField fx:id="movieNameField" prefHeight="37.0" prefWidth="304.0" promptText="Name Of The Movie" styleClass="text-field" stylesheets="@../css/manager_2_style.css" />
        <TextField fx:id="priceField" prefHeight="38.0" prefWidth="145.0" promptText="Price per Ticket" styleClass="text-field" stylesheets="@../css/manager_2_style.css" />
        <Button fx:id="updatePriceButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Update Price" />
    </HBox>

    <!-- TableView: Film ve Fiyat Tablosu -->
    <TableView fx:id="priceTable" layoutX="250" layoutY="70" prefHeight="400" prefWidth="600">
        <columns>
            <TableColumn fx:id="movieNameColumn" prefWidth="300" text="Name Of The Movie" />
            <TableColumn fx:id="priceColumn" prefWidth="150" text="Price" />
        </columns>
    </TableView>

    <Button fx:id="menuButton" layoutX="20" layoutY="500" prefHeight="40" prefWidth="100" styleClass="menu-button" stylesheets="@../css/manager_2_style.css" text="MENU" />
</AnchorPane>