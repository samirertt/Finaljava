<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group11.group11.Controller.UpdateMovieController">

    <!-- Centered Form -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Rounded MT Bold';" text="UPDATE MOVIE" />

        <!-- Table to display movies -->
        <TableView fx:id="moviesTable" prefHeight="200" prefWidth="800" style="-fx-background-color: black; -fx-text-fill: white;">
            <columns>
                <TableColumn fx:id="movieIdColumn" style="-fx-text-fill: white;" text="Movie ID" />
                <TableColumn fx:id="moviesNameColumn" style="-fx-text-fill: white;" text="Name" />
                <TableColumn fx:id="moviesGenreColumn" style="-fx-text-fill: white;" text="Genre" />
                <TableColumn fx:id="moviesSummaryColumn" style="-fx-text-fill: white;" text="Summary" />
                <TableColumn fx:id="moviesImageColumn" style="-fx-text-fill: white;" text="Image" />
            </columns>
        </TableView>

        <!-- Fetch Movie Section -->
        <TextField fx:id="fetchMovieIdField" promptText="Enter Movie ID" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" />
        <Button fx:id="fetchMovieButton" styleClass="custom-button" stylesheets="@../css/admin.css" text="Find Movie" />

        <!-- Update Fields (Hidden Initially) -->
        <VBox fx:id="updateFieldsContainer" spacing="10" visible="false">
            <TextField fx:id="movieIdField" editable="false" promptText="Movie ID" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" />
            <TextField fx:id="moviesNameField" promptText="Movie Name" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" />
            <TextField fx:id="moviesGenreField" promptText="Movie Genre" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" />
            <TextArea fx:id="moviesSummaryField" prefHeight="100" promptText="Movie Summary" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" wrapText="true" />
            <Button fx:id="choosePosterButton" alignment="CENTER" styleClass="custom-button" stylesheets="@../css/admin.css" text="Choose Poster" />
            <ImageView fx:id="posterImageView" fitHeight="150" fitWidth="150" preserveRatio="true" />
            <Button fx:id="updateMovieButton" styleClass="custom-button" stylesheets="@../css/admin.css" text="Update Movie" />
        </VBox>
    </VBox>

    <!-- Menu Button (Positioned at the bottom left with some distance from the border) -->
    <Button fx:id="menuButton" layoutX="806.4" prefHeight="44.0" prefWidth="84.0" styleClass="custom-button" stylesheets="@../css/admin.css" text="Menu" AnchorPane.bottomAnchor="20" AnchorPane.leftAnchor="806.0" />
</AnchorPane>
