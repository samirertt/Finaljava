<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group11.group11.Controller.CancelAndRefundController">

    <!-- Centered Form -->
    <VBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.topAnchor="0">
        <Label style="-fx-font-size: 32; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-family: 'Arial Rounded MT Bold';" text="CANCEL AND REFUND" />

        <!-- Table to display orders -->
        <TableView fx:id="ordersTable" prefHeight="200" prefWidth="800" style="-fx-background-color: black; -fx-text-fill: white;">
            <columns>
                <TableColumn fx:id="orderNoColumn" style="-fx-text-fill: white;" text="Order No" />
                <TableColumn fx:id="orderDateColumn" style="-fx-text-fill: white;" text="Order Date" />
                <TableColumn fx:id="totalPriceColumn" style="-fx-text-fill: white;" text="Total Price" />
            </columns>
        </TableView>

        <!-- Fetch Order Items Section -->
        <TextField fx:id="orderNoField" promptText="Enter Order Number" style="-fx-background-color: black; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 16; -fx-font-family: 'Arial Rounded MT Bold'; -fx-border-color: #96a725; -fx-border-width: 2; -fx-border-radius: 25; -fx-background-radius: 25; -fx-padding: 10;" />
        <Button fx:id="fetchOrderItemsButton" styleClass="custom-button" stylesheets="@../css/admin.css" text="Find Order Items" />

        <!-- Order Items Container (Hidden Initially) -->
        <VBox fx:id="orderItemsContainer" spacing="10" visible="false">
            <TableView fx:id="orderItemsTable" prefHeight="200" prefWidth="800" style="-fx-background-color: black; -fx-text-fill: white;">
                <columns>
                    <TableColumn fx:id="orderItemIdColumn" style="-fx-text-fill: white;" text="Order Item ID" />
                    <TableColumn fx:id="itemTypeColumn" style="-fx-text-fill: white;" text="Item Type" />
                    <TableColumn fx:id="itemIdColumn" style="-fx-text-fill: white;" text="Item ID" />
                    <TableColumn fx:id="quantityColumn" style="-fx-text-fill: white;" text="Quantity" />
                    <TableColumn fx:id="pricePerItemColumn" style="-fx-text-fill: white;" text="Price Per Item" />
                </columns>
            </TableView>
            <Button fx:id="cancelAndRefundButton" styleClass="custom-button" stylesheets="@../css/admin.css" text="Cancel and Refund" />
        </VBox>
    </VBox>

    <!-- Menu Button (Positioned at the bottom right with some distance from the border) -->
    <Button fx:id="menuButton" styleClass="custom-button" stylesheets="@../css/admin.css" text="Menu" AnchorPane.bottomAnchor="20" AnchorPane.rightAnchor="20" />
</AnchorPane>
