<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" style="-fx-background-color: black;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group11.group11.Controller.DiscountController">

    <!-- Sol Kısım: Menü Butonu ve Başlık -->
    <VBox alignment="CENTER" layoutX="20" layoutY="20" spacing="20">
        <Label styleClass="title-label" stylesheets="@../css/manager_2_style.css" text="DISCOUNTS" />
    </VBox>

    <!-- Üst Kısım: İşlem Butonları ve TextField'ler -->
    <HBox layoutX="250" layoutY="20" spacing="10">
        <TextField fx:id="minAgeField" prefHeight="30.0" prefWidth="151.0" promptText="Min. Age" stylesheets="@../css/manager_2_style.css" />
        <TextField fx:id="maxAgeField" prefHeight="28.0" prefWidth="133.0" promptText="Max. Age" stylesheets="@../css/manager_2_style.css" />
        <TextField fx:id="discountRateField" prefHeight="29.0" prefWidth="148.0" promptText="Discount Rate" stylesheets="@../css/manager_2_style.css" />
        <Button fx:id="addDiscountButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Add Discount" />
        <Button fx:id="deleteDiscountButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Delete Discount" />
        <Button fx:id="updateDiscountButton" styleClass="custom-button" stylesheets="@../css/manager_2_style.css" text="Update Discount" />
    </HBox>

    <!-- TableView: İndirim Tablosu -->
    <TableView fx:id="discountTable" layoutX="250" layoutY="70" prefHeight="400" prefWidth="600" stylesheets="@../css/manager_2_style.css">
        <columns>
            <TableColumn fx:id="minAgeColumn" prefWidth="150" text="Min. Age" />
            <TableColumn fx:id="maxAgeColumn" prefWidth="150" text="Max. Age" />
            <TableColumn fx:id="discountRateColumn" prefWidth="150" text="Discount Rate" />
        </columns>
    </TableView>

    <Button fx:id="menuButton" layoutX="20" layoutY="500" prefHeight="40" prefWidth="100" styleClass="menu-button" stylesheets="@../css/manager_2_style.css" text="MENU" />
</AnchorPane>
